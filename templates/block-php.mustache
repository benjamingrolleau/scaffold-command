<?php

function {{machine_name}}_enqueue_block_editor_assets() {
	wp_enqueue_script( '{{slug}}-block', plugins_url( '{{slug}}/block.js', __FILE__ ), array(
		'wp-blocks',
		'wp-i18n',
		'wp-element',
	), time() );
	wp_enqueue_style( '{{slug}}-block', plugins_url( '{{slug}}/editor.css', __FILE__ ), array(
		'wp-blocks',
	), time() );
}
add_action( 'enqueue_block_editor_assets', '{{machine_name}}_enqueue_block_editor_assets' );
